{
  "compilerOptions": {
    "target": "ES6",           
    "module": "CommonJS",        
    "rootDir": "./",           
    "outDir": "../dist",       
    "strict": true,            
    "moduleResolution": "node",
    "esModuleInterop": true,   
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  
  "include": [" **/*.ts", "index.ts"]
}
